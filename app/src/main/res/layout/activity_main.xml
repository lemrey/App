<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find objects"
        android:id="@+id/button_findObjects"
        android:layout_gravity="center_horizontal"
        android:onClick="onButtonFindObjectsClicked" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage objects"
        android:id="@+id/button_manageObjects"
        android:layout_gravity="center_horizontal"
        android:onClick="onButtonManageObjectsClicked" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage rules"
        android:id="@+id/button_manageRules"
        android:layout_gravity="center_horizontal"
        android:onClick="onButtonManageRulesClicked" />
</LinearLayout>

